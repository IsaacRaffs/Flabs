{
  "name": "Flabs",
  "version": "1.0.0",
  "description": "This's a plain application learned from curso.dev by Filipe Deschamps",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest --runInBand --setupFiles dotenv/config",
    "test:watch": "jest --runInBand --watchAll",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migration:down": "node-pg-migrate -m infra/migrations --envPath down",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IsaacRaffs/Flabs.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IsaacRaffs/Flabs/issues"
  },
  "homepage": "https://github.com/IsaacRaffs/Flabs#readme",
  "dependencies": {
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "jest": "^30.2.0",
    "mongodb": "^7.0.0",
    "next": "^16.0.6",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "baseline-browser-mapping": "^2.9.19",
    "prettier": "^3.7.4"
  }
}
